#!/usr/bin/env bash
set -euo pipefail

update () {
  local LATEST
  LATEST=$(asdf latest "$1" "$2") || { echo "FAILED: $1 (couldn't resolve latest)"; return 1; }
  asdf install "$1" "$LATEST" && asdf set "$1" "$LATEST" && echo "$1 â†’ $LATEST" || echo "FAILED: $1"
}

update "golang" "1"
update "python" "3"
update "ruby" "3"
update "nodejs" "24"
update "awscli" "2"
update "pnpm" "10"

asdf reshim
