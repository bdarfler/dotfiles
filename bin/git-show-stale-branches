#!/bin/bash

set -e
git for-each-ref \
  --sort=-committerdate \
  refs/heads \
  --color=auto \
  --format="%(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) (%(color:green)%(committerdate:relative)%(color:reset))" \
  --no-merged | grep --color=never "months ago"
