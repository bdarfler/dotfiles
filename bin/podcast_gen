#!/usr/bin/env bash
for i in *.mp3
do
	# If the file is missing title tag
	if [ -z "$(id3v2 -l "$i" | egrep TI?T2)" ];
	then
		# Set the title tag to the filename
		id3v2 -2 --TIT2 "${i::-4}" "$i"
	fi
done

podcast \
	--dir ~/Dropbox/Podcasting \
	--title "bdarfler podcast" \
	--description "bdarfler podcast" \
	--link "http://bdarfler.com" \
	--version "2.0" \
	--base "https://s3-us-west-2.amazonaws.com/bdarfler-podcast" \
	--image "https://s3-us-west-2.amazonaws.com/bdarfler-podcast/icon.png" \
	--out ~/Dropbox/Podcasting/podcast.xml
