[merge]
  tool = vimdiff
  conflictStyle = diff3
[mergetool "p4merge"]
  path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[mergetool]
  keepBackup = false
  prompt = false
[diff]
  tool = icdiff
[difftool "icdiff"]
  cmd = icdiff --no-bold $LOCAL $REMOTE
[difftool "p4merge"]
  path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[difftool]
  prompt = false
[pager]
  difftool = true
[pull]
  rebase = true
[log]
  abbrevCommit = true
  decorate = auto
[format]
  pretty = oneline
[status]
  short = true
  branch = true
[alias]
  force-push = push --force-with-lease
  amend = commit --amend --no-edit
  unstage = reset HEAD
[color]
  ui = true
[user]
  name = Benjamin Darfler
  email = bdarfler@gmail.com
[credential]
  helper = osxkeychain
[include]
  path = ~/.gitconfig.local
[core]
  excludesfile = ~/.gitignore_global
[commit]
  gpgsign = true
[rerere]
  enabled = true
  autoupdate = true
