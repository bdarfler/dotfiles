[merge]
	tool = p4merge
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "p4merge"]
	path = /Applications/p4merge.app/Contents/Resources/launchp4merge
[diff]
	tool = icdiff
[difftool "icdiff"]
	cmd = icdiff --no-bold $LOCAL $REMOTE
[difftool]
	prompt = false
[pager]
	difftool = true
[pull]
	rebase = true
[log]
	abbrevCommit = true
	decorate = auto
[format]
	pretty = oneline
[status]
	short = true
	branch = true
[alias]
	force-push = push --force-with-lease
	amend = commit --amend --no-edit
	unstage = reset HEAD
[color]
	ui = true
[user]
	name = Benjamin Darfler
	email = bdarfler@gmail.com
[credential]
	helper = osxkeychain
[include]
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global
[commit]
	gpgsign = true
[rerere]
	enabled = true
	autoupdate = true
