[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[mergetool]
  keepBackup = false
  prompt = false
[diff]
  tool = icdiff
[difftool "diffmerge"]
  cmd = diffmerge $LOCAL $REMOTE
[difftool "icdiff"]
  cmd = icdiff --no-bold $LOCAL $REMOTE
[difftool]
  prompt = false
[pager]
  difftool = true
[alias]
  st = status --short --branch
  l = log --oneline --decorate
  df = difftool
  co = checkout
  ci = commit
  br = branch
  pf = push --force-with-lease
  amend = commit --amend --no-edit
  unstage = reset HEAD
[color]
  ui = true
[user]
  name = Benjamin Darfler
[credential]
  helper = osxkeychain
[include]
  path = ~/.gitconfig.local
[core]
  excludesfile = ~/.gitignore_global
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
  gpgsign = true
[rerere]
  enabled = true
  autoupdate = true
[user]
  email = bdarfler@gmail.com
